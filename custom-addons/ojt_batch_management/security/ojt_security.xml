<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_ojt_manager" model="res.groups">
            <field name="name">OJT Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_ojt_trainer" model="res.groups">
            <field name="name">OJT Trainer</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_ojt_mentor" model="res.groups">
            <field name="name">OJT Mentor</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_ojt_coordinator" model="res.groups">
            <field name="name">OJT Coordinator</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <record id="group_ojt_viewer" model="res.groups">
            <field name="name">OJT Viewer</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
        </record>

        <!-- Record Rules -->
        <!-- OJT Batch Rules -->
        <record id="ojt_batch_manager_rule" model="ir.rule">
            <field name="name">OJT Batch Manager Rule</field>
            <field name="model_id" ref="model_ojt_batch"/>
            <field name="groups" eval="[(4, ref('group_ojt_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="ojt_batch_trainer_rule" model="ir.rule">
            <field name="name">OJT Batch Trainer Rule</field>
            <field name="model_id" ref="model_ojt_batch"/>
            <field name="groups" eval="[(4, ref('group_ojt_trainer'))]"/>
            <field name="domain_force">[('mentor_ids','in',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ojt_batch_coordinator_rule" model="ir.rule">
            <field name="name">OJT Batch Coordinator Rule</field>
            <field name="model_id" ref="model_ojt_batch"/>
            <field name="groups" eval="[(4, ref('group_ojt_coordinator'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ojt_batch_viewer_rule" model="ir.rule">
            <field name="name">OJT Batch Viewer Rule</field>
            <field name="model_id" ref="model_ojt_batch"/>
            <field name="groups" eval="[(4, ref('group_ojt_viewer'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- OJT Participant Rules -->
        <record id="ojt_participant_manager_rule" model="ir.rule">
            <field name="name">OJT Participant Manager Rule</field>
            <field name="model_id" ref="model_ojt_participant"/>
            <field name="groups" eval="[(4, ref('group_ojt_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="ojt_participant_trainer_rule" model="ir.rule">
            <field name="name">OJT Participant Trainer Rule</field>
            <field name="model_id" ref="model_ojt_participant"/>
            <field name="groups" eval="[(4, ref('group_ojt_trainer'))]"/>
            <field name="domain_force">[('batch_id.mentor_ids','in',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ojt_participant_coordinator_rule" model="ir.rule">
            <field name="name">OJT Participant Coordinator Rule</field>
            <field name="model_id" ref="model_ojt_participant"/>
            <field name="groups" eval="[(4, ref('group_ojt_coordinator'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ojt_participant_viewer_rule" model="ir.rule">
            <field name="name">OJT Participant Viewer Rule</field>
            <field name="model_id" ref="model_ojt_participant"/>
            <field name="groups" eval="[(4, ref('group_ojt_viewer'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal User Rules for Participants -->
        <record id="ojt_participant_portal_rule" model="ir.rule">
            <field name="name">OJT Participant Portal Rule</field>
            <field name="model_id" ref="model_ojt_participant"/>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- OJT Certificate Rules -->
        <record id="ojt_certificate_manager_rule" model="ir.rule">
            <field name="name">OJT Certificate Manager Rule</field>
            <field name="model_id" ref="model_ojt_certificate"/>
            <field name="groups" eval="[(4, ref('group_ojt_manager'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="ojt_certificate_trainer_rule" model="ir.rule">
            <field name="name">OJT Certificate Trainer Rule</field>
            <field name="model_id" ref="model_ojt_certificate"/>
            <field name="groups" eval="[(4, ref('group_ojt_trainer'))]"/>
            <field name="domain_force">[('batch_id.mentor_ids','in',user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ojt_certificate_viewer_rule" model="ir.rule">
            <field name="name">OJT Certificate Viewer Rule</field>
            <field name="model_id" ref="model_ojt_certificate"/>
            <field name="groups" eval="[(4, ref('group_ojt_viewer')), (4, ref('group_ojt_coordinator'))]"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Public Certificate Access (no rule needed for public verification) -->
    </data>
</odoo>
