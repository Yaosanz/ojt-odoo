<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Cron Job: Auto-close overdue assignments -->
        <record id="ir_cron_auto_close_assignments" model="ir.cron">
            <field name="name">Auto-close Overdue Assignments</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="ojt_batch_management.model_ojt_assignment"/>
            <field name="function">action_auto_close_overdue</field>
            <field name="code">model.action_auto_close_overdue()</field>
        </record>

        <!-- Cron Job: Send assignment reminders -->
        <record id="ir_cron_assignment_reminders" model="ir.cron">
            <field name="name">Send Assignment Reminders</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="ojt_batch_management.model_ojt_assignment"/>
            <field name="function">action_send_reminders</field>
            <field name="code">model.action_send_reminders()</field>
        </record>

        <!-- Cron Job: Auto-close attendance for past events -->
        <record id="ir_cron_auto_close_attendance" model="ir.cron">
            <field name="name">Auto-close Attendance for Past Events</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="ojt_batch_management.model_ojt_event_link"/>
            <field name="function">action_auto_close_attendance</field>
            <field name="code">model.action_auto_close_attendance()</field>
        </record>

        <!-- Cron Job: Batch state transition -->
        <record id="ir_cron_batch_state_transition" model="ir.cron">
            <field name="name">Batch State Transition</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="ojt_batch_management.model_ojt_batch"/>
            <field name="function">action_auto_state_transition</field>
            <field name="code">model.action_auto_state_transition()</field>
        </record>
    </data>
</odoo>
