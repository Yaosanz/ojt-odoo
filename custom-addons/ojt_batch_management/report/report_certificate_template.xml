<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="ojt_certificate_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2 style="text-align:center; color:#003366;">
                        On-the-Job Training Certificate
                    </h2>
                    <p style="text-align:center; margin-top:30px;">
                        This is to certify that
                        <strong><t t-esc="doc.participant_id.name"/></strong><br/>
                        has successfully completed the On-the-Job Training Program
                        under <strong><t t-esc="doc.batch_id.name"/></strong>.
                    </p>
                    <p style="text-align:center; margin-top:30px;">
                        Issued on: <t t-esc="doc.date_issued"/> <br/>
                        <strong>OJT Administration</strong>
                    </p>
                </div>
            </t>
        </t>
    </template>
</odoo>
