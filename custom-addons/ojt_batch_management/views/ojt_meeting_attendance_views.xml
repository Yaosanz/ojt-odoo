<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ============================= -->
    <!-- OJT Meeting Attendance Views -->
    <!-- ============================= -->

    <!-- Tree View -->
    <record id="view_ojt_meeting_attendance_tree" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.tree</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <list string="Meeting Attendance">
                <field name="name"/>
                <field name="event_link_id"/>
                <field name="platform"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"
                       decoration-success="state=='completed'"
                       decoration-warning="state=='ongoing'"
                       decoration-info="state=='scheduled'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_meeting_attendance_form" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.form</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <form string="Meeting Attendance">
                <header>
                    <button name="action_fetch_attendance"
                            string="Fetch Attendance"
                            type="object"
                            class="oe_highlight"
                            invisible="state == 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="scheduled,ongoing,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Meeting Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="event_link_id" options="{'no_create': True}"/>
                            <field name="proctor_id" options="{'no_create': True}"/>
                            <field name="platform"/>
                            <field name="meeting_id"/>
                        </group>
                        <group>
                            <field name="start_time"/>
                            <field name="end_time"/>
                            <field name="min_duration"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="API Configuration" groups="base.group_system">
                        <group>
                            <field name="api_key" password="True"/>
                        </group>
                        <group>
                            <field name="api_secret" password="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendees">
                            <field name="attendee_ids">
                                <list editable="bottom">
                                    <field name="participant_id"/>
                                    <field name="join_time"/>
                                    <field name="leave_time"/>
                                    <field name="duration"/>
                                    <field name="attendance_status"
                                           decoration-success="attendance_status=='present'"
                                           decoration-warning="attendance_status=='late'"
                                           decoration-danger="attendance_status=='absent'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ojt_meeting_attendance_search" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.search</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <search string="Meeting Attendance">
                <field name="name"/>
                <field name="event_link_id"/>
                <field name="platform"/>
                <field name="proctor_id"/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
                <filter string="Ongoing" name="ongoing" domain="[('state', '=', 'ongoing')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="Microsoft Teams" name="teams" domain="[('platform', '=', 'teams')]"/>
                <filter string="Zoom" name="zoom" domain="[('platform', '=', 'zoom')]"/>
                <filter string="Google Meet" name="meet" domain="[('platform', '=', 'meet')]"/>
                <group expand="0" string="Group By">
                    <filter string="Platform" name="group_platform" context="{'group_by': 'platform'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Event" name="group_event" context="{'group_by': 'event_link_id'}"/>
                    <filter string="Proctor" name="group_proctor" context="{'group_by': 'proctor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ojt_meeting_attendance_kanban" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.kanban</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="event_link_id"/>
                <field name="platform"/>
                <field name="start_time"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-10">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="col-2">
                                    <field name="state" widget="label_selection"
                                           options="{'classes': {'scheduled': 'info', 'ongoing': 'warning', 'completed': 'success', 'cancelled': 'default'}}"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <i class="fa fa-calendar"/> <field name="event_link_id"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <i class="fa fa-laptop"/> <field name="platform"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-muted">
                                    <i class="fa fa-clock-o"/> <field name="start_time"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_ojt_meeting_attendance_calendar" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.calendar</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <calendar string="Meeting Schedule" date_start="start_time" date_stop="end_time" color="platform" mode="month">
                <field name="name"/>
                <field name="event_link_id"/>
                <field name="platform"/>
            </calendar>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ojt_meeting_attendance" model="ir.actions.act_window">
        <field name="name">Meeting Attendance</field>
        <field name="res_model">ojt.meeting.attendance</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Meeting Attendance record
            </p>
            <p>
                Track participant attendance in online meetings across different platforms (Teams, Zoom, Google Meet).
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ojt_meeting_attendance"
              name="Meeting Attendance"
              parent="menu_ojt_attendance"
              action="action_ojt_meeting_attendance"
              sequence="30"/>

    <!-- ============================= -->
    <!-- OJT Meeting Attendee Views -->
    <!-- ============================= -->

    <!-- Tree View -->
    <record id="view_ojt_meeting_attendee_tree" model="ir.ui.view">
        <field name="name">ojt.meeting.attendee.tree</field>
        <field name="model">ojt.meeting.attendee</field>
        <field name="arch" type="xml">
            <list string="Meeting Attendees">
                <field name="meeting_id"/>
                <field name="participant_id"/>
                <field name="join_time"/>
                <field name="leave_time"/>
                <field name="duration"/>
                <field name="attendance_status"
                       decoration-success="attendance_status=='present'"
                       decoration-warning="attendance_status=='late'"
                       decoration-danger="attendance_status=='absent'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_meeting_attendee_form" model="ir.ui.view">
        <field name="name">ojt.meeting.attendee.form</field>
        <field name="model">ojt.meeting.attendee</field>
        <field name="arch" type="xml">
            <form string="Meeting Attendee">
                <sheet>
                    <group>
                        <group>
                            <field name="meeting_id"/>
                            <field name="participant_id"/>
                        </group>
                        <group>
                            <field name="join_time"/>
                            <field name="leave_time"/>
                            <field name="duration"/>
                            <field name="attendance_status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ojt_meeting_attendee_search" model="ir.ui.view">
        <field name="name">ojt.meeting.attendee.search</field>
        <field name="model">ojt.meeting.attendee</field>
        <field name="arch" type="xml">
            <search string="Meeting Attendees">
                <field name="meeting_id"/>
                <field name="participant_id"/>
                <filter string="Present" name="present" domain="[('attendance_status', '=', 'present')]"/>
                <filter string="Late" name="late" domain="[('attendance_status', '=', 'late')]"/>
                <filter string="Absent" name="absent" domain="[('attendance_status', '=', 'absent')]"/>
                <group expand="0" string="Group By">
                    <filter string="Meeting" name="group_meeting" context="{'group_by': 'meeting_id'}"/>
                    <filter string="Participant" name="group_participant" context="{'group_by': 'participant_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'attendance_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ojt_meeting_attendee" model="ir.actions.act_window">
        <field name="name">Meeting Attendees</field>
        <field name="res_model">ojt.meeting.attendee</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
