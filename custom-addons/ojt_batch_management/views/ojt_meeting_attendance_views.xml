<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List (Tree) View -->
    <record id="view_ojt_meeting_attendance_list" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.list</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <list string="OJT Meeting Attendance">
                <field name="name"/>
                <field name="platform"/>
                <field name="event_link_id"/>
                <field name="start_time"/>
                <field name="end_time"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_meeting_attendance_form" model="ir.ui.view">
        <field name="name">ojt.meeting.attendance.form</field>
        <field name="model">ojt.meeting.attendance</field>
        <field name="arch" type="xml">
            <form string="Meeting Attendance">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_link_id"/>
                        <field name="proctor_id"/>
                        <field name="platform"/>
                        <field name="meeting_id"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <field name="min_duration"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Attendees">
                            <field name="attendee_ids">
                                <list editable="bottom">
                                    <field name="participant_id"/>
                                    <field name="join_time"/>
                                    <field name="leave_time"/>
                                    <field name="duration"/>
                                    <field name="attendance_status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ojt_meeting_attendance" model="ir.actions.act_window">
        <field name="name">Meeting Attendance</field>
        <field name="res_model">ojt.meeting.attendance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_ojt_meeting_root"
              name="Meeting Management"
              parent="ojt_batch_management.menu_ojt_root"/>

    <menuitem id="menu_ojt_meeting_attendance"
              name="Meeting Attendance"
              parent="menu_ojt_meeting_root"
              action="action_ojt_meeting_attendance"/>
</odoo>
