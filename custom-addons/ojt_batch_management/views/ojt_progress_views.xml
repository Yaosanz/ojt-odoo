<odoo>
    <record id="action_ojt_progress" model="ir.actions.act_window">
        <field name="name">Progress Tracking</field>
        <field name="res_model">ojt.progress</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Track participant progress throughout OJT</field>
    </record>

    <record id="view_ojt_progress_list" model="ir.ui.view">
        <field name="name">ojt.progress.list</field>
        <field name="model">ojt.progress</field>
        <field name="arch" type="xml">
            <list string="OJT Progress" default_order="week desc">
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="week"/>
                <field name="evaluation"/>
                <field name="progress_percentage"/>
                <field name="date_recorded"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_progress_kanban" model="ir.ui.view">
        <field name="name">ojt.progress.kanban</field>
        <field name="model">ojt.progress</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="evaluation">
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="week"/>
                <field name="evaluation"/>
                <field name="progress_percentage"/>
                <field name="date_recorded"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ evaluation == 'excellent' and 'oe_kanban_card_highlight' or '' }}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="participant_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        Week <field name="week"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="batch_id"/>
                                            <div>
                                                <span>Recorded: </span>
                                                <field name="date_recorded"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_record_progress">
                                                <div class="o_kanban_record_progress_title">
                                                    Progress
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar" t-attf-style="width: {{ progress_percentage }}%">
                                                        <t t-esc="progress_percentage"/>%
                                                    </div>
                                                </div>
                                            </div>
                                            <span t-attf-class="badge badge-{{ evaluation == 'excellent' and 'success' or evaluation == 'good' and 'info' or evaluation == 'average' and 'warning' or 'danger' }}">
                                                <field name="evaluation"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ojt_progress_form" model="ir.ui.view">
        <field name="name">ojt.progress.form</field>
        <field name="model">ojt.progress</field>
        <field name="arch" type="xml">
            <form string="OJT Progress">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="participant_id" readonly="1"/>
                            <span> - Week </span>
                            <field name="week"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Progress Details">
                            <field name="participant_id" required="1"/>
                            <field name="batch_id" readonly="1"/>
                            <field name="week" required="1"/>
                            <field name="date_recorded"/>
                        </group>
                        <group string="Evaluation">
                            <field name="evaluation" required="1"/>
                            <field name="progress_percentage" widget="percentpie"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Progress description..."/>
                        </page>
                        <page string="Mentor Notes">
                            <field name="mentor_notes" placeholder="Mentor's feedback and notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
