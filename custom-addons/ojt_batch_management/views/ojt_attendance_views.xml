<odoo>
    <record id="view_ojt_attendance_list" model="ir.ui.view">
        <field name="name">ojt.attendance.list</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <list string="OJT Attendance">
                <field name="date"/>
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="status"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_attendance_form" model="ir.ui.view">
        <field name="name">ojt.attendance.form</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <form string="OJT Attendance">
                <sheet>
                    <group>
                        <field name="participant_id"/>
                        <field name="batch_id" readonly="1"/>
                        <field name="date"/>
                        <field name="status"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ojt_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">ojt.attendance</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
