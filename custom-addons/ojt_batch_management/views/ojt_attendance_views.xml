<odoo>
    <record id="action_ojt_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">ojt.attendance</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Track participant attendance</field>
    </record>

    <record id="view_ojt_attendance_list" model="ir.ui.view">
        <field name="name">ojt.attendance.list</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <list string="OJT Attendance" default_order="check_in desc">
                <field name="check_in"/>
                <field name="participant_id"/>
                <field name="event_link_id"/>
                <field name="presence"/>
                <field name="check_out"/>
                <field name="duration_minutes"/>
                <field name="method"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_attendance_kanban" model="ir.ui.view">
        <field name="name">ojt.attendance.kanban</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="presence">
                <field name="check_in"/>
                <field name="participant_id"/>
                <field name="event_link_id"/>
                <field name="presence"/>
                <field name="check_out"/>
                <field name="method"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ presence == 'present' and 'oe_kanban_card_highlight' or '' }}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="participant_id"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="check_in"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="event_link_id"/>
                                            <div>
                                                <span>Check-in: </span>
                                                <field name="check_in"/>
                                            </div>
                                            <div>
                                                <span>Check-out: </span>
                                                <field name="check_out"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div>
                                                <span>Duration: </span>
                                                <t t-esc="duration_minutes"/> min
                                            </div>
                                            <div>
                                                <span>Method: </span>
                                                <field name="method"/>
                                            </div>
                                            <span t-attf-class="badge badge-{{ presence == 'present' and 'success' or presence == 'late' and 'warning' or presence == 'absent' and 'danger' or 'secondary' }}">
                                                <field name="presence"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ojt_attendance_form" model="ir.ui.view">
        <field name="name">ojt.attendance.form</field>
        <field name="model">ojt.attendance</field>
        <field name="arch" type="xml">
            <form string="OJT Attendance">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="participant_id"/>
                            <span> - </span>
                            <field name="check_in"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Attendance Details">
                            <field name="participant_id" required="1"/>
                            <field name="event_link_id" domain="[('batch_id','=',batch_id)]"/>
                            <field name="presence" required="1"/>
                        </group>
                        <group string="Time Tracking">
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="duration_minutes" readonly="1"/>
                            <field name="method"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
