<odoo>
    <record id="view_ojt_event_link_list" model="ir.ui.view">
        <field name="name">ojt.event.link.list</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <list string="OJT Events">
                <field name="name"/>
                <field name="event_date"/>
                <field name="supervisor"/>
                <field name="batch_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_event_link_form" model="ir.ui.view">
        <field name="name">ojt.event.link.form</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <form string="OJT Event">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="event_date"/>
                        <field name="description"/>
                        <field name="supervisor"/>
                        <field name="batch_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ojt_event_link" model="ir.actions.act_window">
        <field name="name">OJT Events</field>
        <field name="res_model">ojt.event.link</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
