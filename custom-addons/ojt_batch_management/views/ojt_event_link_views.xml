<odoo>
    <record id="action_ojt_event_link" model="ir.actions.act_window">
        <field name="name">OJT Events</field>
        <field name="res_model">ojt.event.link</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Manage OJT events and agendas</field>
    </record>

    <record id="view_ojt_event_link_list" model="ir.ui.view">
        <field name="name">ojt.event.link.list</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <list string="OJT Events" default_order="event_date desc">
                <field name="name"/>
                <field name="event_date"/>
                <field name="batch_id"/>
                <field name="supervisor"/>
                <field name="is_mandatory"/>
                <field name="weight"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_event_link_kanban" model="ir.ui.view">
        <field name="name">ojt.event.link.kanban</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="name"/>
                <field name="event_date"/>
                <field name="batch_id"/>
                <field name="supervisor"/>
                <field name="is_mandatory"/>
                <field name="weight"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ status == 'ongoing' and 'oe_kanban_card_highlight' or '' }}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="event_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="batch_id"/>
                                            <div>
                                                <span>Supervisor: </span>
                                                <field name="supervisor"/>
                                            </div>
                                            <div>
                                                <span>Mandatory: </span>
                                                <field name="is_mandatory"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div>
                                                <span>Weight: </span>
                                                <t t-esc="weight"/>%
                                            </div>
                                            <span t-attf-class="badge badge-{{ status == 'done' and 'success' or status == 'ongoing' and 'info' or status == 'planned' and 'secondary' or 'warning' }}">
                                                <field name="status"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ojt_event_link_form" model="ir.ui.view">
        <field name="name">ojt.event.link.form</field>
        <field name="model">ojt.event.link</field>
        <field name="arch" type="xml">
            <form string="OJT Event">
                <header>
                    <button name="action_start_event" string="Start Event" type="object"
                            class="btn-info" invisible="status != 'planned'"/>
                    <button name="action_mark_done" string="Mark Done" type="object"
                            class="btn-success" invisible="status == 'done'"/>
                    <field name="status" widget="statusbar" statusbar_visible="planned,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Event Title"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Event Details">
                            <field name="batch_id" required="1"/>
                            <field name="event_date" required="1"/>
                            <field name="supervisor"/>
                            <field name="is_mandatory"/>
                        </group>
                        <group string="Configuration">
                            <field name="weight"/>
                            <field name="event_id"/>
                            <field name="online_meeting_url"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Event description..."/>
                        </page>
                        <page string="Additional Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
