<odoo>
    <record id="view_ojt_participant_tree" model="ir.ui.view">
        <field name="name">ojt.participant.tree</field>
        <field name="model">ojt.participant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="department"/>
                <field name="batch_id"/>
                <field name="company_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_participant_form" model="ir.ui.view">
        <field name="name">ojt.participant.form</field>
        <field name="model">ojt.participant</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="student_id"/>
                        <field name="department"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="batch_id"/>
                        <field name="company_name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ojt_participant" model="ir.actions.act_window">
        <field name="name">Participants</field>
        <field name="res_model">ojt.participant</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
