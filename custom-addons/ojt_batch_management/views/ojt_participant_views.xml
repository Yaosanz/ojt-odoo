<odoo>
    <!-- Action: Participants -->
    <record id="action_ojt_participant" model="ir.actions.act_window">
        <field name="name">Participants</field>
        <field name="res_model">ojt.participant</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Manage OJT participants</field>
    </record>

    <!-- Tree View -->
    <record id="view_ojt_participant_tree" model="ir.ui.view">
        <field name="name">ojt.participant.tree</field>
        <field name="model">ojt.participant</field>
        <field name="arch" type="xml">
            <list string="Participants" default_order="name">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="student_id"/>
                <field name="batch_id"/>
                <field name="attendance_rate"/>
                <field name="score_final"/>
                <field name="state"/>
                <field name="certificate_id"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_ojt_participant_kanban" model="ir.ui.view">
        <field name="name">ojt.participant.kanban</field>
        <field name="model">ojt.participant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="batch_id"/>
                <field name="attendance_rate"/>
                <field name="score_final"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ state == 'completed' and 'oe_kanban_card_highlight' or '' }}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <span><field name="student_id"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="partner_id"/>
                                            <div>
                                                <span>Batch: </span>
                                                <field name="batch_id"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_record_progress">
                                                <div class="o_kanban_record_progress_title">
                                                    Attendance
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar" t-attf-style="width: {{ attendance_rate }}%">
                                                        <t t-esc="attendance_rate"/>%
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <span>Score: </span>
                                                <t t-esc="score_final"/>%
                                            </div>
                                            <span t-attf-class="badge badge-{{ state == 'completed' and 'success' or state == 'active' and 'info' or state == 'failed' and 'danger' or 'secondary' }}">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- List view for Assignment Submission (used inside form) -->
    <record id="view_ojt_assignment_submit_list_for_participant" model="ir.ui.view">
        <field name="name">ojt.assignment.submit.list.for.participant</field>
        <field name="model">ojt.assignment.submit</field>
        <field name="arch" type="xml">
            <list string="Assignment Submissions">
                <field name="assignment_id"/>
                <field name="submitted_on"/>
                <field name="score"/>
                <field name="state"/>
                <field name="late"/>
                <field name="reviewer_id"/>
                <field name="feedback"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ojt_participant_form" model="ir.ui.view">
        <field name="name">ojt.participant.form</field>
        <field name="model">ojt.participant</field>
        <field name="arch" type="xml">
            <form string="OJT Participant">
                <header>
                    <button name="action_complete" string="Mark Completed" type="object"
                            class="btn-success" invisible="state == 'completed'"/>
                    <button name="action_fail" string="Mark Failed" type="object"
                            class="btn-danger" invisible="state in ('failed', 'left')"/>
                    <button name="action_left" string="Mark Left" type="object"
                            class="btn-warning" invisible="state == 'left'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed,failed,left"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>

                    <group>
                        <group string="Personal Information">
                            <field name="partner_id" required="1"/>
                            <field name="student_id"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <group string="OJT Details">
                            <field name="batch_id" required="1"/>
                            <field name="start_date" readonly="1"/>
                            <field name="end_date" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Performance">
                            <group>
                                <group>
                                    <field name="attendance_count" readonly="1"/>
                                    <field name="attendance_rate" readonly="1" widget="percentpie"/>
                                </group>
                                <group>
                                    <field name="score_avg" readonly="1"/>
                                    <field name="score_final" readonly="1"/>
                                    <field name="mentor_score"/>
                                </group>
                            </group>
                        </page>

                        <page string="Assignments">
                            <field name="assignment_submit_ids" readonly="1">
                                <list string="Assignment Submissions">
                                    <field name="assignment_id"/>
                                    <field name="submitted_on"/>
                                    <field name="score"/>
                                    <field name="state"/>
                                    <field name="late"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
