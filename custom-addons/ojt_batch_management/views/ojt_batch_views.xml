<odoo>
    <!-- ACTION -->
    <record id="action_ojt_batch" model="ir.actions.act_window">
        <field name="name">OJT Batches</field>
        <field name="res_model">ojt.batch</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Manage OJT training batches</field>
    </record>

    <!-- VIEW LIST -->
    <record id="view_ojt_batch_list" model="ir.ui.view">
        <field name="name">ojt.batch.list</field>
        <field name="model">ojt.batch</field>
        <field name="arch" type="xml">
            <list string="OJT Batches" default_order="start_date desc">
                <field name="name"/>
                <field name="code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="mode"/>
                <field name="capacity"/>
                <field name="participant_count"/>
                <field name="assignment_count"/>
                <field name="progress_ratio"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- VIEW KANBAN -->
    <record id="view_ojt_batch_kanban" model="ir.ui.view">
        <field name="name">ojt.batch.kanban</field>
        <field name="model">ojt.batch</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="code"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="participant_count"/>
                <field name="progress_ratio"/>
                <field name="state"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click" t-att-class="state == 'ongoing' and 'oe_kanban_card_highlight' or ''">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <span><field name="code"/></span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <div>
                                                <span>Start: </span>
                                                <field name="start_date"/>
                                            </div>
                                            <div>
                                                <span>End: </span>
                                                <field name="end_date"/>
                                            </div>
                                            <div>
                                                <span>Participants: </span>
                                                <field name="participant_count"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_record_progress">
                                                <div class="o_kanban_record_progress_title">
                                                    Progress
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar" t-attf-style="width: {{ progress_ratio }}%">
                                                        <t t-esc="progress_ratio"/>%
                                                    </div>
                                                </div>
                                            </div>
                                            <span class="badge badge-success" t-if="record.state.raw_value == 'ongoing'">
                                                <field name="state"/>
                                            </span>
                                            <span class="badge badge-info" t-elif="record.state.raw_value == 'done'">
                                                <field name="state"/>
                                            </span>
                                            <span class="badge badge-danger" t-elif="record.state.raw_value == 'cancel'">
                                                <field name="state"/>
                                            </span>
                                            <span class="badge badge-secondary" t-else="">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VIEW FORM -->
    <record id="view_ojt_batch_form" model="ir.ui.view">
        <field name="name">ojt.batch.form</field>
        <field name="model">ojt.batch</field>
        <field name="arch" type="xml">
            <form string="OJT Batch">
                <header>
                    <button name="action_recruit" string="Start Recruitment" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start Batch" type="object"
                            class="btn-success" invisible="state != 'recruit'"/>
                    <button name="action_done" string="Complete Batch" type="object"
                            class="btn-info" invisible="state != 'ongoing'"/>
                    <button name="action_cancel" string="Cancel Batch" type="object"
                            class="btn-danger" invisible="state in ('done', 'cancel')"/>
                    <button name="action_generate_certificates" string="Generate Certificates" type="object"
                            class="btn-warning" invisible="state != 'done'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,recruit,ongoing,done,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Batch Name"/>
                        </h1>
                        <h3>
                            <field name="code" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="job_id"/>
                            <field name="department_id"/>
                            <field name="mentor_ids" widget="many2many_tags"/>
                            <field name="mode"/>
                            <field name="capacity"/>
                        </group>
                        <group string="Schedule">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="certificate_rule_attendance"/>
                            <field name="certificate_rule_score"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Batch description..."/>
                        </page>
                        <page string="Participants">
                            <group>
                                <group>
                                    <div class="oe_kanban_bottom_left">
                                        <button name="%(ojt_batch_management.action_ojt_participant)d" type="action"
                                                class="btn btn-primary btn-sm" string="View Participants">
                                            <field name="participant_count" widget="statinfo"/>
                                        </button>
                                    </div>
                                </group>
                                <group>
                                    <field name="progress_ratio" widget="percentpie"/>
                                </group>
                            </group>
                            <field name="participant_ids" readonly="1">
                                <list string="Participants">
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="state"/>
                                    <field name="attendance_rate"/>
                                    <field name="score_final"/>
                                </list>
                            </field>
                        </page>
                        <page string="Assignments">
                            <group>
                                <div class="oe_kanban_bottom_left">
                                    <button name="%(action_ojt_assignment)d" type="action"
                                            class="btn btn-secondary btn-sm" string="View Assignments">
                                        <field name="assignment_count" widget="statinfo"/>
                                    </button>
                                </div>
                            </group>
                            <field name="event_link_ids" readonly="1">
                                <list string="Events">
                                    <field name="name"/>
                                    <field name="event_date"/>
                                    <field name="is_mandatory"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        <page string="Survey">
                            <group>
                                <field name="survey_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
