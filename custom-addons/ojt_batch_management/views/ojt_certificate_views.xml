<odoo>
    <record id="action_ojt_certificate" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">ojt.certificate</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help">Manage OJT completion certificates</field>
    </record>

    <record id="view_ojt_certificate_list" model="ir.ui.view">
        <field name="name">ojt.certificate.list</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <list string="OJT Certificates" default_order="issue_date desc">
                <field name="name"/>
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="issue_date"/>
                <field name="attendance_rate"/>
                <field name="final_score"/>
                <field name="grade"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_ojt_certificate_kanban" model="ir.ui.view">
        <field name="name">ojt.certificate.kanban</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="participant_id"/>
                <field name="batch_id"/>
                <field name="issue_date"/>
                <field name="attendance_rate"/>
                <field name="final_score"/>
                <field name="grade"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click {{ state == 'issued' and 'oe_kanban_card_highlight' or '' }}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="participant_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="batch_id"/>
                                            <div>
                                                <span>Issued: </span>
                                                <field name="issue_date"/>
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <div class="o_kanban_record_progress">
                                                <div class="o_kanban_record_progress_title">
                                                    Attendance
                                                </div>
                                                <div class="progress">
                                                    <div class="progress-bar" t-attf-style="width: {{ attendance_rate }}%">
                                                        <t t-esc="attendance_rate"/>%
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <span>Score: </span>
                                                <t t-esc="final_score"/>%
                                            </div>
                                            <div>
                                                <span>Grade: </span>
                                                <field name="grade"/>
                                            </div>
                                            <span t-attf-class="badge badge-{{ state == 'issued' and 'success' or 'secondary' }}">
                                                <field name="state"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_ojt_certificate_form" model="ir.ui.view">
        <field name="name">ojt.certificate.form</field>
        <field name="model">ojt.certificate</field>
        <field name="arch" type="xml">
            <form string="OJT Certificate">
                <header>
                    <button name="action_issue" string="Issue Certificate" type="object"
                            class="btn-primary" invisible="state == 'issued'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,issued"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                        <h3>
                            <field name="participant_id"/>
                        </h3>
                    </div>
                    <group>
                        <group string="Certificate Details">
                            <field name="participant_id" required="1"/>
                            <field name="batch_id"/>
                            <field name="issue_date"/>
                            <field name="mentor_name"/>
                        </group>
                        <group string="Performance">
                            <field name="attendance_rate" widget="percentpie"/>
                            <field name="final_score"/>
                            <field name="grade"/>
                            <field name="serial"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Certificate PDF">
                            <group>
                                <field name="pdf_file" filename="pdf_filename"/>
                                <field name="pdf_filename"/>
                            </group>
                        </page>
                        <page string="Remarks">
                            <field name="remarks" placeholder="Additional remarks..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
