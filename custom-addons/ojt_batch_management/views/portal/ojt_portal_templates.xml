<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_ojt_dashboard" name="OJT Portal Dashboard">
        <t t-call="portal.layout">
            <div class="container mt-5">
                <h2>My OJT Information</h2>
                <t t-if="participant">
                    <p><strong>Name:</strong> <t t-esc="participant.name"/></p>
                    <p><strong>Batch:</strong> <t t-esc="participant.batch_id.name"/></p>
                    <p><strong>Status:</strong> <t t-esc="participant.status"/></p>

                    <h4 class="mt-4">Certificates</h4>
                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Certificate</th>
                                <th>Batch</th>
                                <th>Date Issued</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="certificates" t-as="cert">
                                <tr>
                                    <td><t t-esc="cert.name"/></td>
                                    <td><t t-esc="cert.batch_id.name"/></td>
                                    <td><t t-esc="cert.date_issued"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <p>No OJT data available.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>
