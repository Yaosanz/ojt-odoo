<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ============================= -->
    <!--      OJT PORTAL MEETING ATTENDANCE PAGE     -->
    <!-- ============================= -->
    <template id="portal_ojt_meeting_attendance" name="OJT Portal Meeting Attendance">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Meeting Attendance</t>
            </t>

            <div class="container mt-5 o_portal_my_ojt">
                <t t-if="participant">
                    <!-- ====================== -->
                    <!-- Page Header -->
                    <!-- ====================== -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2><i class="fas fa-video mr-2"></i>Meeting Attendance</h2>
                            <p class="text-muted">Track your online meeting participation and attendance</p>
                        </div>
                    </div>

                    <!-- ====================== -->
                    <!-- Meeting Attendance Summary Statistics -->
                    <!-- ====================== -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="card border-left-info shadow h-100">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Total Meetings
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <t t-esc="total_meetings"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-video fa-2x text-info"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-left-success shadow h-100">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Present Count
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <t t-esc="present_count"/>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card border-left-warning shadow h-100">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Total Duration
                                            </div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                                <t t-if="total_duration is not None">
                                                    <t t-esc="'%.1f' % total_duration"/> min
                                                </t>
                                                <t t-else="">
                                                    0.0 min
                                                </t>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-clock fa-2x text-warning"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ====================== -->
                    <!-- Search and Filter Bar -->
                    <!-- ====================== -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Sort By:</label>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <t t-foreach="searchbar_sortings" t-as="sort_key">
                                                    <a t-attf-href="/my/ojt/meeting?sortby={{ sort_key }}&amp;filterby={{ filterby }}"
                                                       t-attf-class="btn btn-outline-secondary {{ sortby == sort_key and 'active' or '' }}">
                                                        <t t-esc="searchbar_sortings[sort_key]['label']"/>
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label>Filter By:</label>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <t t-foreach="searchbar_filters" t-as="filter_key">
                                                    <a t-attf-href="/my/ojt/meeting?sortby={{ sortby }}&amp;filterby={{ filter_key }}"
                                                       t-attf-class="btn btn-outline-secondary {{ filterby == filter_key and 'active' or '' }}">
                                                        <t t-esc="searchbar_filters[filter_key]['label']"/>
                                                    </a>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ====================== -->
                    <!-- Meeting Attendance Records Section -->
                    <!-- ====================== -->
                    <div class="card mb-4 shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Meeting Records</h5>
                        </div>
                        <div class="card-body">
                            <t t-if="meetings">
                                <div class="row">
                                    <t t-foreach="meeting_data" t-as="data">
                                        <t t-set="meeting" t-value="data['meeting']"/>
                                        <t t-set="attendee" t-value="data['attendee']"/>
                                        
                                        <div class="col-lg-6 col-md-12 mb-3">
                                            <div class="card border-left-info shadow-sm h-100">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <!-- Meeting Name -->
                                                            <h6 class="card-title mb-2">
                                                                
                                                                <t t-esc="meeting.name"/>
                                                            </h6>
                                                            
                                                            <!-- Event Link -->
                                                            <p class="card-text mb-1">
                                                                <small class="text-muted">
                                                                    <i class="fas fa-calendar-alt mr-1"></i>
                                                                    <strong>Event:</strong> <t t-esc="meeting.event_link_id.name"/>
                                                                </small>
                                                            </p>
                                                            
                                                            <!-- Meeting Time -->
                                                            <p class="card-text mb-1">
                                                                <small class="text-muted">
                                                                    <i class="fas fa-clock mr-1"></i>
                                                                    <strong>Start:</strong> <t t-esc="meeting.start_time and meeting.start_time.strftime('%d %b %Y %H:%M') or 'N/A'"/>
                                                                </small>
                                                            </p>
                                                            <t t-if="meeting.end_time">
                                                                <p class="card-text mb-1">
                                                                    <small class="text-muted">
                                                                        <i class="fas fa-clock mr-1"></i>
                                                                        <strong>End:</strong> <t t-esc="meeting.end_time.strftime('%d %b %Y %H:%M')"/>
                                                                    </small>
                                                                </p>
                                                            </t>
                                                            
                                                            <!-- Platform -->
                                                            <p class="card-text mb-2">
                                                                <small class="text-muted">
                                                                    <i class="fas fa-laptop mr-1"></i>
                                                                    <strong>Platform:</strong> 
                                                                    <span t-if="meeting.platform == 'teams'">Microsoft Teams</span>
                                                                    <span t-elif="meeting.platform == 'zoom'">Zoom</span>
                                                                    <span t-elif="meeting.platform == 'meet'">Google Meet</span>
                                                                    <span t-else=""><t t-esc="meeting.platform"/></span>
                                                                </small>
                                                            </p>
                                                            
                                                            <!-- Meeting Status -->
                                                            <div class="mb-2">
                                                                <span t-attf-class="badge badge-{{ meeting.state == 'completed' and 'success' or meeting.state == 'ongoing' and 'warning' or meeting.state == 'scheduled' and 'info' or 'secondary' }}">
                                                                    <t t-esc="meeting.state.upper()"/>
                                                                </span>
                                                            </div>
                                                            
                                                            <!-- Attendance Information -->
                                                            <div class="mt-3 pt-3 border-top">
                                                                <t t-if="attendee">
                                                                    <h6 class="text-primary mb-2">
                                                                        <i class="fas fa-user-check mr-1"></i>Your Attendance
                                                                    </h6>
                                                                    
                                                                    <!-- Attendance Status -->
                                                                    <p class="mb-1">
                                                                        <strong>Status:</strong>
                                                                        <span t-attf-class="badge badge-{{ attendee.attendance_status == 'present' and 'success' or attendee.attendance_status == 'late' and 'warning' or 'danger' }}">
                                                                            <t t-esc="attendee.attendance_status.upper()"/>
                                                                        </span>
                                                                    </p>
                                                                    
                                                                    <!-- Duration -->
                                                                    <p class="mb-1">
                                                                        <strong>Duration:</strong> 
                                                                        <t t-esc="'%.1f' % attendee.duration"/> minutes
                                                                        <t t-if="meeting.min_duration">
                                                                            (Required: <t t-esc="'%.0f' % meeting.min_duration"/> min)
                                                                        </t>
                                                                    </p>
                                                                    
                                                                    <!-- Join/Leave Time -->
                                                                    <t t-if="attendee.join_time">
                                                                        <p class="mb-1">
                                                                            <small>
                                                                                <strong>Joined:</strong> <t t-esc="attendee.join_time.strftime('%H:%M:%S')"/>
                                                                            </small>
                                                                        </p>
                                                                    </t>
                                                                    <t t-if="attendee.leave_time">
                                                                        <p class="mb-1">
                                                                            <small>
                                                                                <strong>Left:</strong> <t t-esc="attendee.leave_time.strftime('%H:%M:%S')"/>
                                                                            </small>
                                                                        </p>
                                                                    </t>
                                                                </t>
                                                                <t t-else="">
                                                                    <div class="alert alert-warning mb-0">
                                                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                                                        <small>No attendance data recorded</small>
                                                                    </div>
                                                                </t>
                                                            </div>
                                                            
                                                            <!-- Action Buttons -->
                                                            <div class="mt-3 text-center">
                                                                <a t-attf-href="/my/ojt/meeting/{{ meeting.id }}" 
                                                                   class="btn btn-primary btn-sm">
                                                                    View Details
                                                                </a>
                                                                <t t-if="meeting.meeting_id and meeting.state != 'completed'">
                                                                    <a t-att-href="meeting.meeting_id" 
                                                                       target="_blank"
                                                                       class="btn btn-success btn-sm ml-2">
                                                                        Join Meeting
                                                                    </a>
                                                                </t>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                                
                                <!-- Pagination -->
                                <div class="row mt-4">
                                    <div class="col-12">
                                        <t t-call="portal.pager"/>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="text-center py-5">
                                    <i class="fas fa-video-slash fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No meeting records found</h5>
                                    <p class="text-muted">
                                        <t t-if="filterby != 'all'">
                                            Try changing the filter or 
                                            <a t-attf-href="/my/ojt/meeting?sortby={{ sortby }}">view all meetings</a>
                                        </t>
                                        <t t-else="">
                                            No meetings have been scheduled yet.
                                        </t>
                                    </p>
                                </div>
                            </t>
                        </div>
                    </div>

                </t>
                <t t-else="">
                    <div class="alert alert-warning mt-5">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Not Enrolled
                        </h4>
                        <p>You are not currently enrolled in any OJT program.</p>
                        <hr/>
                        <p class="mb-0">
                            <a href="/my" class="btn btn-warning">
                                <i class="fas fa-arrow-left mr-1"></i>Back to Portal
                            </a>
                        </p>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <!-- ============================= -->
    <!--      MEETING DETAIL PAGE      -->
    <!-- ============================= -->
    <template id="portal_ojt_meeting_detail" name="OJT Meeting Detail">
        <t t-call="portal.portal_layout">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 mb-3">
                        <a href="/my/ojt/meeting" class="btn btn-secondary">
                            <i class="fas fa-arrow-left mr-1"></i>Back to Meetings
                        </a>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-8 mb-4">
                        <div class="card shadow">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-video mr-2"></i>
                                    <t t-esc="meeting.name"/>
                                </h5>
                            </div>
                            <div class="card-body">
                                <h6 class="mb-3">Meeting Information</h6>
                                <table class="table table-sm">
                                    <tr>
                                        <th width="30%">Event</th>
                                        <td><t t-esc="meeting.event_link_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Platform</th>
                                        <td>
                                            <span t-if="meeting.platform == 'teams'">Microsoft Teams</span>
                                            <span t-elif="meeting.platform == 'zoom'">Zoom</span>
                                            <span t-elif="meeting.platform == 'meet'">Google Meet</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Start Time</th>
                                        <td><t t-esc="meeting.start_time and meeting.start_time.strftime('%d %b %Y %H:%M') or 'N/A'"/></td>
                                    </tr>
                                    <tr>
                                        <th>End Time</th>
                                        <td><t t-esc="meeting.end_time and meeting.end_time.strftime('%d %b %Y %H:%M') or 'N/A'"/></td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>
                                            <span t-attf-class="badge badge-{{ meeting.state == 'completed' and 'success' or meeting.state == 'ongoing' and 'warning' or 'info' }}">
                                                <t t-esc="meeting.state.upper()"/>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Minimum Duration</th>
                                        <td><t t-esc="'%.0f' % meeting.min_duration"/> minutes</td>
                                    </tr>
                                </table>
                                
                                <t t-if="meeting.meeting_id and meeting.state != 'completed'">
                                    <div class="mt-3">
                                        <a t-att-href="meeting.meeting_id" target="_blank" class="btn btn-success">
                                            Join Meeting
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-4 mb-4">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-user-check mr-2"></i>Your Attendance
                                </h5>
                            </div>
                            <div class="card-body">
                                <t t-if="attendee">
                                    <div class="text-center mb-3">
                                        <h3>
                                            <span t-attf-class="badge badge-{{ attendee.attendance_status == 'present' and 'success' or attendee.attendance_status == 'late' and 'warning' or 'danger' }}">
                                                <t t-esc="attendee.attendance_status.upper()"/>
                                            </span>
                                        </h3>
                                    </div>
                                    
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <th>Duration:</th>
                                            <t t-esc="'%.1f' % (attendee.duration or 0.0)"/> minutes
                                        </tr>
                                        <tr t-if="attendee.join_time">
                                            <th>Joined:</th>
                                            <td><t t-esc="attendee.join_time.strftime('%H:%M:%S')"/></td>
                                        </tr>
                                        <tr t-if="attendee.leave_time">
                                            <th>Left:</th>
                                            <td><t t-esc="attendee.leave_time.strftime('%H:%M:%S')"/></td>
                                        </tr>
                                    </table>
                                </t>
                                <t t-else="">
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle mr-1"></i>
                                        No attendance data recorded
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>