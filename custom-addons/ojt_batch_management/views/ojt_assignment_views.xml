<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Assignment List View -->
        <record id="view_ojt_assignment_tree" model="ir.ui.view">
            <field name="name">ojt.assignment.tree</field>
            <field name="model">ojt.assignment</field>
            <field name="arch" type="xml">
                <list string="Assignments" default_order="deadline desc">
                    <field name="name"/>
                    <field name="batch_id"/>
                    <field name="event_link_id"/>
                    <field name="type"/>
                    <field name="deadline"/>
                    <field name="max_score"/>
                    <field name="weight"/>
                    <field name="state"/>
                    <field name="submit_count"/>
                </list>
            </field>
        </record>

        <!-- Assignment Form View -->
        <record id="view_ojt_assignment_form" model="ir.ui.view">
            <field name="name">ojt.assignment.form</field>
            <field name="model">ojt.assignment</field>
            <field name="arch" type="xml">
                <form string="Assignment">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                        <button name="action_open" string="Open Assignment" type="object"
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_close" string="Close Assignment" type="object"
                                class="btn-secondary" invisible="state != 'open'"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Assignment Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="batch_id" required="1"/>
                                <field name="event_link_id" domain="[('batch_id','=',batch_id)]"/>
                                <field name="type"/>
                                <field name="deadline"/>
                            </group>
                            <group>
                                <field name="max_score"/>
                                <field name="weight"/>
                                <field name="attachment_required"/>
                                <field name="state" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Assignment description..."/>
                            </page>
                            <page string="Submissions">
                                <field name="submit_ids" readonly="1">
                                    <list string="Submissions">
                                        <field name="participant_id"/>
                                        <field name="submitted_on"/>
                                        <field name="score"/>
                                        <field name="state"/>
                                        <field name="late"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Assignment Kanban View -->
        <record id="view_ojt_assignment_kanban" model="ir.ui.view">
            <field name="name">ojt.assignment.kanban</field>
            <field name="model">ojt.assignment</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="batch_id"/>
                    <field name="deadline"/>
                    <field name="state"/>
                    <field name="submit_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span><field name="name"/></span>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="batch_id"/>
                                                <div>
                                                    <span>Deadline: </span>
                                                    <field name="deadline"/>
                                                </div>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span t-attf-class="badge badge-{{state == 'open' and 'success' or state == 'closed' and 'secondary' or 'info'}}">
                                                    <field name="state"/>
                                                </span>
                                                <div>
                                                    <span><field name="submit_count"/> submissions</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    </data>
</odoo>
